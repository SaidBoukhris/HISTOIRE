{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<article class="accueil">
    <h2>{{article.categories.name}}</h2>
    <h3>{{ article.title }} </h3>
    <p>
        {% if article.modifiedAt is not null %}
            Modifié le {{ article.modifiedAt ? article.modifiedAt|date('d/m/Y à H:i:s') : '' }}
        {% else %}
            Publié le {{ article.createdAt ? article.createdAt|date('d/m/Y') : '' }}
        {% endif %}
        | par <a href="#"><span>&commat;</span>{{ article.users.pseudo }}</a>
    </p>
    <p>{{ article.likes }} aimes | {{ article.dislikes }} n'aimes pas</p>
    <p>{{ include('/partials/_socialBar.html.twig')}}</p>
    <p>{{ article.content|raw }}</p>
</article>

<aside class="accueil_aside">
    <a href="{{ path('app_articles_accueil') }}">Retour</a>

        {% if article.users == app.user %}
            <a href="{{ path('users_articles_edit', {'slug': article.slug}) }}">Modifier</a>
        {% else %}

        {% endif %}
    <h2>Derniers articles</h2>
    <div class="cards">
    {% for category in categories %}
    {% for articles in category.articles %}
        <div class="card">
            <div class="card_img"  style="background-image: url({{articles.thumb}});">
                <h4 class="card_title"><b></b></h4> 
            </div>
            <div class="card_body">
            {# <p><a href="{{ path('articles_show', {'slug': article.slug}) }}">{{ articles.title }}</a></p>  #}
            </div>
        </div>
        {% endfor %}
        {% endfor %}
    </div>
</aside>
{% endblock %}
